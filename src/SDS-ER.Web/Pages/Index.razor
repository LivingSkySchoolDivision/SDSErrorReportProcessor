@page "/"

<AuthorizeView>
    <Authorized>
        <h1>Hello, world!</h1>
        <div>
            Logged in as <b>@context.User.Identity.Name</b>
        </div>
        
    </Authorized>
    <NotAuthorized>
        <div class="main">
            <a href="Account/Login">Log in</a>
        </div>
    </NotAuthorized>
</AuthorizeView>
